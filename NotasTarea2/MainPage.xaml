<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotasTarea2.MainPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout Orientation="Vertical" Padding="30" Spacing="100" BackgroundColor="Beige">
        <BoxView HeightRequest="10"/>
        <Image HorizontalOptions="Center" WidthRequest="300" Source="maco.jpg"/>
        <Frame BackgroundColor="#088da5" HasShadow="False">
            <StackLayout Orientation="Vertical" Spacing="10">
                <Entry x:Name="txtUsuario" Placeholder="Usuario"   
                           PlaceholderColor="Beige" HeightRequest="40"  
                           TextColor="White"/>
                <Entry x:Name="txtPass" Placeholder="Contraseña"   
                           PlaceholderColor="Beige" HeightRequest="40"   
                           IsPassword="True"  
                           TextColor="White"/>
            </StackLayout>
        </Frame>
        <Button x:Name="login" Text="Login" TextColor="Beige"  
                    FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand"  
                    BackgroundColor="#088da5" Clicked="login_Clicked"/>
    </StackLayout>

</ContentPage>
